  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Quart",
      "type": "python",
      "request": "launch",
      "module": "quart",
      "cwd": "${workspaceFolder}/app/backend",
      "env": {
        "QUART_APP": "main:app",
        "QUART_ENV": "development",
        "QUART_DEBUG": "0"
      },
      "args": ["run", "--no-reload", "-p 50505"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "envFile": "${input:dotEnvFilePath}"
    },
    {
      "name": "Frontend: watch",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/app/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "watch"],
      "console": "integratedTerminal"
    },
    {
      "name": "Frontend: build",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/app/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "build"],
      "console": "integratedTerminal"
    }
  ],
  "inputs": [
    {
      "id": "dotEnvFilePath",
      "type": "command",
      "command": "azure-dev.commands.getDotEnvFilePath"
    }
  ]
}
