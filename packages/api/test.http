@api_host = http://localhost:3000


# Chat with the bot
POST {{api_host}}/chat
Content-Type: application/json

{
  "history": [{ "user": "What happens in a performance review?" }],
  "approach":"rrr",
  "overrides": {
    "retrieval_mode": "hybrid",
    "semantic_ranker": true,
    "semantic_captions": false,
    "top": 3,
    "suggest_followup_questions": false
  }
}

###

# Ask a question using the rtr approach
POST {{api_host}}/ask
Content-Type: application/json

{
  "question": "What does a Product Manager do?",
  "approach":"rtr",
  "overrides": {
    "retrieval_mode": "hybrid",
    "semantic_ranker": true,
    "semantic_captions": false,
    "top": 3
  }
}

###

# Ask a question using the rrr approach
POST {{api_host}}/ask
Content-Type: application/json

{
  "question": "What is the title of Employee2?",
  "approach":"rrr",
  "overrides": {
    "retrieval_mode": "hybrid",
    "semantic_ranker": true,
    "semantic_captions": false,
    "top": 3
  }
}
